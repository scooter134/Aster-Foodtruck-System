<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Food Truck System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/dashboard"><i class="bi bi-truck"></i> Food Truck System</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link active" href="/dashboard"><i class="bi bi-house"></i> Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" href="/trucks"><i class="bi bi-shop"></i> Browse Trucks</a></li>
                    <li class="nav-item"><a class="nav-link" href="/cart"><i class="bi bi-cart3"></i> Cart</a></li>
                    <li class="nav-item"><a class="nav-link" href="/myOrders"><i class="bi bi-receipt"></i> My Orders</a></li>
                </ul>
                <div class="d-flex align-items-center">
                    <span class="text-white me-3"><i class="bi bi-person-circle"></i> <span id="userName">Customer</span></span>
                    <button class="btn btn-outline-light btn-sm" id="logoutBtn">
                        <i class="bi bi-box-arrow-right"></i> Logout
                    </button>
                </div>
            </div>
        </div>
    </nav>

    <!-- Hero Welcome Section -->
    <div class="bg-primary text-white py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="display-5 fw-bold mb-3">
                        <i class="bi bi-hand-wave"></i> Welcome back, <span id="welcomeName">Customer</span>!
                    </h1>
                    <p class="lead mb-0">Discover delicious food from local food trucks near you.</p>
                </div>
                <div class="col-md-4 text-md-end mt-3 mt-md-0">
                    <i class="bi bi-truck" style="font-size: 5rem; opacity: 0.5;"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="container py-5">
        <h3 class="mb-4"><i class="bi bi-lightning-charge"></i> Quick Actions</h3>
        <div class="row g-4">
            <div class="col-md-4">
                <a href="/trucks" class="text-decoration-none">
                    <div class="card h-100 shadow-sm border-0 text-center p-4 hover-shadow">
                        <div class="card-body">
                            <i class="bi bi-shop text-primary" style="font-size: 3rem;"></i>
                            <h5 class="mt-3">Browse Trucks</h5>
                            <p class="text-muted">Discover food trucks and explore their menus</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a href="/cart" class="text-decoration-none">
                    <div class="card h-100 shadow-sm border-0 text-center p-4 hover-shadow">
                        <div class="card-body">
                            <i class="bi bi-cart3 text-success" style="font-size: 3rem;"></i>
                            <h5 class="mt-3">View Cart</h5>
                            <p class="text-muted">Check your cart and proceed to checkout</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a href="/myOrders" class="text-decoration-none">
                    <div class="card h-100 shadow-sm border-0 text-center p-4 hover-shadow">
                        <div class="card-body">
                            <i class="bi bi-receipt text-warning" style="font-size: 3rem;"></i>
                            <h5 class="mt-3">My Orders</h5>
                            <p class="text-muted">Track your orders and view history</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <!-- How It Works Section -->
    <div class="bg-light py-5">
        <div class="container">
            <h3 class="text-center mb-5"><i class="bi bi-question-circle"></i> How It Works</h3>
            <div class="row g-4">
                <div class="col-md-3 text-center">
                    <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <span class="h4 mb-0">1</span>
                    </div>
                    <h5>Browse Trucks</h5>
                    <p class="text-muted">Explore available food trucks on campus</p>
                </div>
                <div class="col-md-3 text-center">
                    <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <span class="h4 mb-0">2</span>
                    </div>
                    <h5>Choose Items</h5>
                    <p class="text-muted">Select your favorite items from the menu</p>
                </div>
                <div class="col-md-3 text-center">
                    <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <span class="h4 mb-0">3</span>
                    </div>
                    <h5>Place Order</h5>
                    <p class="text-muted">Select pickup time and confirm your order</p>
                </div>
                <div class="col-md-3 text-center">
                    <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <span class="h4 mb-0">4</span>
                    </div>
                    <h5>Pick Up</h5>
                    <p class="text-muted">Collect your food at the scheduled time</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Toast -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="notificationToast" class="toast" role="alert">
            <div class="toast-header">
                <i class="bi bi-bell me-2"></i>
                <strong class="me-auto" id="toastTitle">Notification</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body" id="toastMessage"></div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/api.js"></script>
    <script>
        $(document).ready(function() {
            // Check authentication
            const user = API.getUser();
            if (!user) {
                window.location.href = '/';
                return;
            }
            
            // Display user name
            const displayName = user.first_name || 'Customer';
            $('#userName').text(displayName);
            $('#welcomeName').text(displayName);
            
            // Logout handler
            $('#logoutBtn').on('click', function() {
                API.logout();
            });
        });
    </script>
</body>
</html>
