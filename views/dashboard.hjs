<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}} - Food Truck System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/"><i class="bi bi-truck"></i> Food Truck System</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link active" href="/dashboard"><i class="bi bi-speedometer2"></i> Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" href="/orders"><i class="bi bi-receipt"></i> Orders</a></li>
                    <li class="nav-item"><a class="nav-link" href="/menu"><i class="bi bi-list-ul"></i> Menu</a></li>
                </ul>
                <div class="d-flex align-items-center text-white">
                    <span class="me-3" id="currentTime"></span>
                    <button class="btn btn-outline-light btn-sm" id="logoutBtn">
                        <i class="bi bi-box-arrow-right"></i> Logout
                    </button>
                </div>
            </div>
        </div>
    </nav>

    <div class="container-fluid mt-4">
        <!-- Truck Information Section -->
        <div class="row mb-4">
            <div class="col-md-8">
                <div class="card shadow-sm truck-info-card">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-auto">
                                <div class="truck-logo" id="truckLogo">
                                    <i class="bi bi-truck"></i>
                                </div>
                            </div>
                            <div class="col">
                                <h2 class="mb-1" id="truckName">Loading...</h2>
                                <p class="text-muted mb-2" id="truckCuisine"><i class="bi bi-tag"></i> <span>-</span></p>
                                <p class="text-muted mb-0" id="truckDescription">-</p>
                            </div>
                            <div class="col-auto">
                                <div class="truck-status-container">
                                    <span class="truck-status-label">Truck Status</span>
                                    <span class="truck-status-badge" id="truckStatusBadge">
                                        <i class="bi bi-circle-fill"></i> <span>Loading...</span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <!-- Order Availability Toggle -->
                <div class="card shadow-sm h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title mb-3"><i class="bi bi-power"></i> Order Availability</h5>
                        <div class="form-check form-switch d-flex justify-content-center mb-3">
                            <input class="form-check-input availability-switch" type="checkbox" id="orderAvailabilityToggle" checked>
                        </div>
                        <p class="availability-status mb-2" id="availabilityStatus">Accepting Orders</p>
                        <small class="text-muted">Toggle to start/stop accepting new orders</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card stats-card border-0 shadow-sm bg-primary text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h3 class="mb-0" id="totalMenuItems">0</h3>
                                <small>Menu Items</small>
                            </div>
                            <div class="stats-icon">
                                <i class="bi bi-list-ul"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card stats-card border-0 shadow-sm bg-warning text-dark">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h3 class="mb-0" id="pendingOrdersCount">0</h3>
                                <small>Pending Orders</small>
                            </div>
                            <div class="stats-icon">
                                <i class="bi bi-hourglass-split"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card stats-card border-0 shadow-sm bg-success text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h3 class="mb-0" id="completedOrdersCount">0</h3>
                                <small>Completed Today</small>
                            </div>
                            <div class="stats-icon">
                                <i class="bi bi-check-circle"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card stats-card border-0 shadow-sm bg-info text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h3 class="mb-0" id="todayRevenue">$0</h3>
                                <small>Today's Revenue</small>
                            </div>
                            <div class="stats-icon">
                                <i class="bi bi-currency-dollar"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions & Recent Orders -->
        <div class="row">
            <!-- Quick Actions -->
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-white">
                        <h5 class="mb-0"><i class="bi bi-lightning"></i> Quick Actions</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-3">
                            <a href="/menu/add" class="btn btn-outline-primary btn-lg quick-action-btn">
                                <i class="bi bi-plus-circle"></i> Add Menu Item
                            </a>
                            <a href="/menu" class="btn btn-outline-secondary btn-lg quick-action-btn">
                                <i class="bi bi-pencil-square"></i> Manage Menu
                            </a>
                            <a href="/orders" class="btn btn-outline-success btn-lg quick-action-btn">
                                <i class="bi bi-receipt"></i> View Orders
                            </a>
                            <a href="/time-slots" class="btn btn-outline-info btn-lg quick-action-btn">
                                <i class="bi bi-clock"></i> Manage Time Slots
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Orders Summary -->
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="bi bi-clock-history"></i> Recent Orders</h5>
                        <a href="/orders" class="btn btn-sm btn-outline-primary">View All</a>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Order #</th>
                                        <th>Customer</th>
                                        <th>Items</th>
                                        <th>Total</th>
                                        <th>Status</th>
                                        <th>Time</th>
                                    </tr>
                                </thead>
                                <tbody id="recentOrdersBody">
                                    <tr>
                                        <td colspan="6" class="text-center py-4">
                                            <div class="spinner-border spinner-border-sm text-primary"></div>
                                            <span class="ms-2">Loading...</span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Active Orders Alert -->
        <div class="row mt-4" id="activeOrdersAlert" style="display: none;">
            <div class="col-12">
                <div class="alert alert-warning d-flex align-items-center" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <div>
                        <strong>Attention!</strong> You have <span id="activeOrdersCount">0</span> orders that need attention.
                        <a href="/orders?status=pending" class="alert-link">View pending orders</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Toast Notification -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="notificationToast" class="toast" role="alert">
            <div class="toast-header">
                <i class="bi bi-bell me-2"></i>
                <strong class="me-auto" id="toastTitle">Notification</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body" id="toastMessage"></div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/api.js"></script>
    <script src="/js/dashboard.js"></script>
</body>
</html>
