<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Dashboard - Food Truck System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/customer/dashboard"><i class="bi bi-truck"></i> Food Truck System</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link active" href="/customer/dashboard"><i class="bi bi-house"></i> Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" href="/customer/browse-trucks"><i class="bi bi-shop"></i> Browse Trucks</a></li>
                    <li class="nav-item"><a class="nav-link" href="/customer/cart"><i class="bi bi-cart3"></i> Cart</a></li>
                    <li class="nav-item"><a class="nav-link" href="/customer/orders"><i class="bi bi-receipt"></i> My Orders</a></li>
                </ul>
                <div class="d-flex align-items-center">
                    <span class="text-white me-3"><i class="bi bi-person-circle"></i> <span id="navUsername">{{username}}</span></span>
                    <button class="btn btn-outline-light btn-sm" id="logoutBtn">
                        <i class="bi bi-box-arrow-right"></i> Logout
                    </button>
                </div>
            </div>
        </div>
    </nav>

    <!-- Hero Welcome Section -->
    <div class="customer-hero bg-primary text-white py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="display-5 fw-bold mb-3">
                        <i class="bi bi-hand-wave"></i> Welcome back, <span id="welcomeUsername">{{username}}</span>!
                    </h1>
                    <p class="lead mb-0">Discover delicious food from local food trucks near you.</p>
                </div>
                <div class="col-md-4 text-md-end mt-3 mt-md-0">
                    <div class="hero-icon">
                        <i class="bi bi-truck"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container py-4">
        <!-- Quick Action Buttons -->
        <div class="row mb-5">
            <div class="col-12">
                <h4 class="mb-4"><i class="bi bi-lightning-charge text-warning"></i> Quick Actions</h4>
            </div>
            <div class="col-md-4 mb-3">
                <a href="/customer/browse-trucks" class="card quick-action-card shadow-sm h-100 text-decoration-none">
                    <div class="card-body text-center py-4">
                        <div class="quick-action-icon bg-primary text-white mb-3">
                            <i class="bi bi-shop"></i>
                        </div>
                        <h5 class="card-title text-dark">Browse Trucks</h5>
                        <p class="card-text text-muted">Explore food trucks and their menus</p>
                    </div>
                </a>
            </div>
            <div class="col-md-4 mb-3">
                <a href="/customer/cart" class="card quick-action-card shadow-sm h-100 text-decoration-none">
                    <div class="card-body text-center py-4">
                        <div class="quick-action-icon bg-success text-white mb-3">
                            <i class="bi bi-cart3"></i>
                        </div>
                        <h5 class="card-title text-dark">View Cart</h5>
                        <p class="card-text text-muted">Check your cart and checkout</p>
                        <span class="badge bg-danger" id="cartBadge" style="display: none;">0</span>
                    </div>
                </a>
            </div>
            <div class="col-md-4 mb-3">
                <a href="/customer/orders" class="card quick-action-card shadow-sm h-100 text-decoration-none">
                    <div class="card-body text-center py-4">
                        <div class="quick-action-icon bg-info text-white mb-3">
                            <i class="bi bi-receipt"></i>
                        </div>
                        <h5 class="card-title text-dark">My Orders</h5>
                        <p class="card-text text-muted">Track and view your order history</p>
                    </div>
                </a>
            </div>
        </div>

        <!-- How It Works Section -->
        <div class="row mb-5">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-white">
                        <h4 class="mb-0"><i class="bi bi-info-circle text-primary"></i> How It Works</h4>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-3 mb-4 mb-md-0">
                                <div class="how-it-works-step">
                                    <div class="step-number">1</div>
                                    <div class="step-icon">
                                        <i class="bi bi-search"></i>
                                    </div>
                                    <h6 class="mt-3">Browse Trucks</h6>
                                    <p class="text-muted small">Find food trucks that are currently open</p>
                                </div>
                            </div>
                            <div class="col-md-3 mb-4 mb-md-0">
                                <div class="how-it-works-step">
                                    <div class="step-number">2</div>
                                    <div class="step-icon">
                                        <i class="bi bi-list-ul"></i>
                                    </div>
                                    <h6 class="mt-3">View Menu</h6>
                                    <p class="text-muted small">Explore delicious menu items</p>
                                </div>
                            </div>
                            <div class="col-md-3 mb-4 mb-md-0">
                                <div class="how-it-works-step">
                                    <div class="step-number">3</div>
                                    <div class="step-icon">
                                        <i class="bi bi-cart-plus"></i>
                                    </div>
                                    <h6 class="mt-3">Add to Cart</h6>
                                    <p class="text-muted small">Select items and add to your cart</p>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="how-it-works-step">
                                    <div class="step-number">4</div>
                                    <div class="step-icon">
                                        <i class="bi bi-bag-check"></i>
                                    </div>
                                    <h6 class="mt-3">Pickup</h6>
                                    <p class="text-muted small">Schedule pickup and enjoy!</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Featured Trucks Preview -->
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-white d-flex justify-content-between align-items-center">
                        <h4 class="mb-0"><i class="bi bi-star text-warning"></i> Featured Trucks</h4>
                        <a href="/customer/browse-trucks" class="btn btn-outline-primary btn-sm">View All <i class="bi bi-arrow-right"></i></a>
                    </div>
                    <div class="card-body">
                        <div class="row" id="featuredTrucksContainer">
                            <div class="col-12 text-center py-4">
                                <div class="spinner-border text-primary"></div>
                                <p class="mt-2 text-muted">Loading featured trucks...</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-light py-4 mt-5">
        <div class="container text-center">
            <p class="text-muted mb-0">&copy; 2024 Food Truck System. All rights reserved.</p>
        </div>
    </footer>

    <!-- Toast Notification -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="notificationToast" class="toast" role="alert">
            <div class="toast-header">
                <i class="bi bi-bell me-2"></i>
                <strong class="me-auto" id="toastTitle">Notification</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body" id="toastMessage"></div>
        </div>
    </div>

    <!-- Hidden User ID -->
    <input type="hidden" id="userId" value="{{userId}}">
    <input type="hidden" id="username" value="{{username}}">

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/customer-dashboard.js"></script>
</body>
</html>
